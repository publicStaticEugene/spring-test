<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="loggers.xml"/>

    <bean id="client" class="com.spring.app1.bean.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="client one"/>
        <property name="greeting" value="Hello there!"/>
    </bean>

    <bean id="app" class="com.spring.app1.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
        <constructor-arg>
            <map key-type="com.spring.app1.logger.EventType"
                 value-type="com.spring.app1.logger.EventLogger">
                <entry key="INFO" value-ref="consoleEventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="event" class="com.spring.app1.bean.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getInstance"/>
        </constructor-arg>
    </bean>
</beans>
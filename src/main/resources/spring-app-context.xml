<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.spring.app1.bean.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="client one"/>
    </bean>

    <bean id="eventLogger" class="com.spring.app1.logger.ConsoleEventLogger"/>

    <bean id="app" class="com.spring.app1.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="event" class="com.spring.app1.bean.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getInstance"/>
        </constructor-arg>
    </bean>

    <bean id="cacheFileEventLogger" class="com.spring.app1.logger.CacheFileEventLogger"
          init-method="init" destroy-method="destroy">
        <constructor-arg name="fileName" value="log\\log"/>
        <constructor-arg name="cacheSize" value="4"/>
        <constructor-arg name="cache">
            <bean class="java.util.ArrayList"/>
        </constructor-arg>
    </bean>
</beans>